@model IEnumerable<WebTinTuc.Models.User>

@{
    ViewBag.Title = "User List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Username</th>
            <th>Email</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>Date of Birth</th>
            <th>Gender</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.Address</td>
                <td>@user.PhoneNumber</td>
                <td>@user.DateOfBirth</td>
                <td>@user.Gender</td>
                <td>
                    <a href="@Url.Action("UserArticles", "Account", new { userId = user.Id })" class="btn btn-primary">View Articles</a>
                </td>
            </tr>
        }

    </tbody>
</table>
